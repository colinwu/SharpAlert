<% title "Jam Code Stats" %>
<%= form_tag jam_code_stats_report_path, :method => 'get' do -%>
  <%= select_tag :days, options_for_select([['30 Days', 30],
                                          ['60 Days', 60],
                                          ['90 Days', 90]], @days) -%>
  <%= submit_tag "Go" %>
<% end %>
                                         
<table class='counters'>
<tr><th colspan=<%= @code_list.length + 1 %>>Jam Codes</th></tr>
<tr>
  <th>Devices</th>
  <% @code_list.each do |c| %>
    <th><%= c.jam_code %></th>
  <% end %>
</tr>

<% @dev_list.each do |d| %>
  <% unless @dev_stats[d.id].nil? %>
    <tr class="<%= cycle('dark','light') %>">
      <th><%= link_to d.name, full_jam_history_report_path(d.id) %></th>
      <% @code_list.each do |code| %>
      <td><% unless (@dev_stats[d.id][code.jam_code].nil?) %><%= link_to @dev_stats[d.id][code.jam_code], jam_history_report_path(d.id,code.jam_code) + "?days=#{@days}", :title => "Jam code: #{code.jam_code}" %><% end %></td>
      <% end %>
    </tr>
  <% end %>
<% end %>
</table>