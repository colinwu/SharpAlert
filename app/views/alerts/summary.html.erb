    <td class='right-justify'>
      <%= link_to_unless @service[d.model].empty?, @service[d.model].length, alerts_path + "?model_q=#{d.model}&msg_q=service&commit=Find", :title => @service[d.model].empty? ? '' : "#{@service[d.model].last.alert_date.to_formatted_s(:db)} from #{@service[d.model].last.name}" -%> (<%= (@service[d.model].length.to_f / dev_count).round(1) -%>)</td>
