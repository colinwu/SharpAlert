  <% @devices_by_model.each do |d| %>
  <%   dev_count = @count_by_model[d.model] %>
  <tr class="<%= cycle('light','dark') -%>">
    <td>
      <%= link_to h(d.model), alerts_path + "?model_q=#{d.model}&commit=Find", :title => "Click to view all alerts for this model" -%> (<%= dev_count -%>)</td>
