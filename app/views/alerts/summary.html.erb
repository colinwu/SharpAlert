      <%= link_to_unless @paper[d.model].empty?, @paper[d.model].length, alerts_path + "?model_q=#{d.model}&msg_q=paper&commit=Find", :title => @paper[d.model].empty? ? '' : "#{@paper[d.model].last.alert_date.to_formatted_s(:db)} from #{@paper[d.model].last.name}" -%> (<%= (@paper[d.model].length.to_f / dev_count).round(1) -%>)</td>
    <td class='right-justify'>
